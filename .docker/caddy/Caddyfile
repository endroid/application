# Symfony (PHP-FPM)
localhost:443 {
	root * /var/www/html/symfony/application/public
	tls internal
	encode zstd gzip
	file_server
	php_fastcgi php:9000 {
		resolve_root_symlink
	}
	@phpFile {
		path *.php*
	}
	error @phpFile "Not found" 404
}

# Symfony (Roadrunner)
localhost:9000 {
	root * /var/www/html/symfony/application/public
	tls internal
	encode zstd gzip
	file_server
	reverse_proxy php:6000
}

