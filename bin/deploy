#!/bin/bash

set -ex

rm -rf application
git clone git@github.com:endroid/application.git

(
    cd application
    rm -rf .docker/caddy/data
    rm -rf .docker/postgres/data
    vi .docker/caddy/certificate.pem
    vi .docker/caddy/key.pem
    > input uit cloudflare
    make up
    make php symfony build
    bin/console asset-map:compile
    make php symfony run &
)
