#!/bin/bash

set -ex

cd "$(dirname "$0")"/..

rm -rf application

composer create-project laravel/laravel application --no-interaction
cp -r base/. application/

(
    cd application

    composer require \
        laravel/octane

    php artisan octane:install --server=frankenphp

    git init
    git add -A && git commit -m "Initial commit"
)
